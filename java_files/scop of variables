public class Scop
{
    public static void main (String [] args)
    {
        int A=10;
        {
            int B= 20;
            System.out.println("Block A="+A);
            System.out.println ("Block B=" +B);
         }
         {
         int B=30;
            System.out.println("Block A="+A);
            System.out.println ("Block B=" +B);
          }
         int B=40;
      {
            System.out.println("Block A="+A);
            System.out.println ("Block B=" +B);
      }
    }
}