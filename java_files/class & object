class person 
{
    int age =21;
    int weight =43;
    String color= "Light";
    
    void eat()
    {
        System.out.println ("I am eating");
    }
    void sleep ()
    {
        System.out.println ("I am sleeping");
    }
    public static void main (String[] args)
    {
        person p= new person ();
        System.out.println (p.age);
        System.out.println(p.weight);
        System.out.println(p.color);
        
        p.eat();
        p.sleep ();
    }
}